@model ContentModel

<script src="https://cdn.tiny.cloud/1/your-api-key/tinymce/5/tinymce.min.js"></script>
<!-- TinyMCE init script -->
<script>
	tinymce.init({
		selector: '#content',
		height: 400,
		menubar: false,
		toolbar: 'undo redo | bold italic underline | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent'

	});
</script>


<div class="container mt-3">
	<h1 class="text-center">File Details</h1>
	<form class="mt-3" method="post">
		<div class="form-group">
			<input type="hidden" class="form-control" value="@Model.FileId" name="fileid">
			<label for="filename">File Name:</label>
			<input type="text" class="form-control" value="@Model.FileName"name="filename">
		</div>
		<div class="form-group">
			<label for="ownername">File Owner Name:</label>
			<input type="text" class="form-control" value="@Model.FileOwner" name="ownername">
		</div>
		<div class="form-group">
			<label for="content">Content:</label>
			@Html.TextAreaFor(model => @Model.Content, new { @class = "form-control", @name= "content" , @id = "content" })

			</div>
		<button type="submit" asp-action="UpdateContenttoDb" onclick="showAlert()" class="btn btn-primary mt-5">Update</button>
		<a class="btn btn-danger mt-5" asp-action="Dashboard">Cancel</a>

	</form>
</div>

<script>
	function showAlert() {
		alert("Are you sure you want to Update the form?");
	}
</script>