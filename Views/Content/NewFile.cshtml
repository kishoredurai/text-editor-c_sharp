@if (Model.errorMessage.Length > 0)
{
	<script>
		alert(@Model.errorMessage);
		</script>


}
<script src="https://cdn.tiny.cloud/1/your-api-key/tinymce/5/tinymce.min.js"></script>
<!-- TinyMCE init script -->
<script>
	tinymce.init({
	  selector: '#content'
	});
</script>


<div class="container mt-3">
	<h1 class="text-center">File Details</h1>
	<form class="mt-3" method="post">
		<div class="form-group">
			<label for="filename">File Name:</label>
			<input type="text" class="form-control" name="filename">
		</div>
		<div class="form-group">
			<label for="ownername">File Owner Name:</label>
			<input type="text" class="form-control" name="ownername">
		</div>
		<div class="form-group">
			<label for="content">Content:</label>
			<textarea class="form-control" row="60" name="content" id="content"></textarea>
		</div>
		<button type="submit" asp-action="AddContenttoDB" class="btn btn-primary mt-5">Save</button>
		<a class="btn btn-danger mt-5" asp-action="Dashboard">Cancel</a>

	</form>
</div>